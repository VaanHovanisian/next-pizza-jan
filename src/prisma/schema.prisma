generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int               @id @default(autoincrement())
  email            String            @unique
  fullName         String
  password         String
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  provider         String?
  role             UserRole          @default(USER)
  verified         DateTime?
  providerId       String?
  cart             Cart?
  order            Order[]
  verificationCode VerificationCode?
}

model Cart {
  id          Int           @id @default(autoincrement())
  userId      Int?          @unique
  token       String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  totalAmount Int?
  user        User?         @relation(fields: [userId], references: [id])
  products    CartProduct[]
}

model CartProduct {
  id          Int          @id @default(autoincrement())
  quantity    Int          @default(1)
  cartId      Int
  variantid   Int
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  cart        Cart         @relation(fields: [cartId], references: [id])
  variant     Variation    @relation(fields: [variantid], references: [id])
  ingredients Ingredient[] @relation("CartProductToIngredient")
}

model Product {
  id          Int          @id @default(autoincrement())
  name        String
  imgUrl      String
  categoryId  Int
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  category    Category     @relation(fields: [categoryId], references: [id])
  variants    Variation[]
  ingredients Ingredient[] @relation("IngredientToProduct")
}

model Ingredient {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  imgUrl       String
  price        Int
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  cartProducts CartProduct[] @relation("CartProductToIngredient")
  products     Product[]     @relation("IngredientToProduct")
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]
}

model Order {
  id          Int         @id @default(autoincrement())
  fullName    String
  email       String
  address     String
  phone       String
  comment     String?
  token       String
  userId      Int?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  items       Json
  status      OrderStatus
  totalAmount Int         @default(0)
  paymentId   String?
  user        User?       @relation(fields: [userId], references: [id])
}

model Variation {
  id           Int           @id @default(autoincrement())
  size         Int?
  pizzaType    Int?
  price        Int
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  productId    Int
  cartProducts CartProduct[]
  product      Product       @relation(fields: [productId], references: [id])
}

model VerificationCode {
  id        Int      @id @default(autoincrement())
  code      String
  userId    Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

enum UserRole {
  ADMIN
  USER
}

enum OrderStatus {
  PENDING
  SUCCESS
  CANCELED
}
